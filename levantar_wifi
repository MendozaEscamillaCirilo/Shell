#!/bin/bash

wpa_supplicant -B -P wpa_supplicant.pid -d -c /root/wpa_supplicant.conf -D wext -i wlan0
echo "?????????????????????????????????????????????????????????????????"
echo "_________________________________________________________________"
wpa_cli status
echo "_________________________________________________________________"
echo "?????????????????????????????????????????????????????????????????"
ip addr flush dev wlan0 up
ip link set dev wlan0 down
dhclient -v -4 -pf /root/dhclient.pid wlan0
